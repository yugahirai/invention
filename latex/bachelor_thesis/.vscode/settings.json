{
  "editor.wordWrap": "on",
  "latex-workshop.latex.tools": [
      {
          "name": "latexmk",
          "command": "latexmk",
          "args": [
              "-lualatex",
              "-synctex=1",
              "-interaction=nonstopmode",
              "-output-directory=out",
              "%DOC%"
          ]
      },
      {
          "command": "latexmk",
          "args": [
              "-c",
              "-output-directory=out",
              "%DOC%"
          ]
      }
  ],
  "latex-workshop.view.pdf.refresh.enabled": true,
  "latex-workshop.view.pdf.viewer": "tab",
  "latex-workshop.latex.outDir": "out"
}
